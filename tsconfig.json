{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": false,
    "target": "es2017",
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"],
    "noErrorTruncation": true
  },
  "include": ["src/**/*", "run/**/*"]
}
